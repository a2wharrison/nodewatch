
{lib_dirs, ["dxdb", "dxkit", "dxweb"]}.
{sub_dirs, ["dxdb", "dxkit", "dxweb", "release"]}.
{deps_dir, ["lib"]}.

{clean_files, ["release/reltool.config", "release/setup"]}.
{post_hooks, [
    {compile, "escript generate_relconfig"}
]}.

{erl_opts, [{outdir, "ebin"}]}.
{cover_enabled, true}.
{cover_print_enabled, true}.

%% project wide dependencies
{deps, [
    %% use riak_err to manage sasl logging
    {riak_err, ".*"},
    {fastlog, ".*"},
    {appstart, ".*"}
]}.

{require_otp_vsn, "R13B04|R14"}.
